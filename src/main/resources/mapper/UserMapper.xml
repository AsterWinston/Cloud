<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aster.cloud.mapper.UserMapper">
    <resultMap id="UserResultMap" type="com.aster.cloud.beans.User">
        <id column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="limit_volume" property="limitVolume"/>
        <result column="dir_name" property="dirName"/>
        <result column="create_date" property="createDate"/>
    </resultMap>
    <select id="selectByName" resultMap="UserResultMap">
        select * from user where name = #{name}
    </select>
    <update id="updatePasswordByName">
        update user set password = #{password} where name = #{name}
    </update>
    <insert id="insertOne" parameterType="com.aster.cloud.beans.User">
        insert into user values (#{name}, #{password}, #{limitVolume}, #{dirName}, #{createDate})
    </insert>

    <delete id="deleteByName">
        delete from user where name = #{name}
    </delete>

    <select id="selectByNameAndPassword" resultMap="UserResultMap">
        select * from user where name = #{name} and password = #{password}
    </select>

    <update id="updateLimitVolumeByName">
        update user set limit_volume = #{limitVolume} where name = #{name}
    </update>

    <select id="selectByDirName" resultMap="UserResultMap">
        select * from user where dir_name = #{dirName}
    </select>

    <select id="selectAll" resultMap="UserResultMap">
        select * from user
    </select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 配置默认的访问页面 -->
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <!-- 配置 Session 超时设置 -->
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

    <!--配置filter执行顺序-->
    <filter-mapping>
        <filter-name>NetFilter</filter-name>
        <url-pattern>/*</url-pattern> <!-- 设置过滤所有请求 -->
    </filter-mapping>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern> <!-- 设置过滤所有请求 -->
    </filter-mapping>

    <filter-mapping>
        <filter-name>RedirectFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

    <!--错误页重定向，开发阶段不要使用-->
<!--    <error-page>-->
<!--        <location>/error</location>-->
<!--    </error-page>-->
    
    <!--配置listener执行顺序-->
    <listener>
        <listener-class>com.aster.cloud.listener.AdminConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.aster.cloud.listener.StoreConfigListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.aster.cloud.listener.SystemInitListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.aster.cloud.listener.ApplicationConfigListener</listener-class>
    </listener>

</web-app>
